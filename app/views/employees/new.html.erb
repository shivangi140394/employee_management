            </div>
        </div>

        <div class="form-group">
          <%= form.label :Email, class: "col-md-1 control-label"%><br>
            <div class="col-md-12">
            <%= form.email_field :email,  :uniqueness => true, class: "form-control" %>
            </div>
        </div>
    
