      <%= form_for @employee, :url =>  employees_path, method: :post, remote: true, :html => {:class => "form-horizontal center"} do |form| %>

        <div class="form-group">

          <%= form.label :Role, class: "col-md-1 control-label" %><br>
            <div class="col-md-12">
