<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 align="center"><b><i>Log in...</i></b></h3>
  </div>

<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">

  <%= form_for(resource, :html => {:class => "form-horizontal center"}, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <div class="field">
      <%= f.label :email, class: "col-md-6 control-label" %><br />
      <div class="col-md-12">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :password, class: "col-md-6 control-label" %><br />
       <div class="col-md-4">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
    </div>
  </div>

    <div class="form-group">
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.label :remember_me, class: "col-md-6 control-label"%>
        <div class="col-md-2">
       <%= f.check_box :remember_me %>
      </div>
      </div>
    </div>

    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary center-block" %>
    </div>
    <% end %>
  </div>
  </div>
</div>

<%#= render "employees/shared/links" %>
