<div class="panel panel-primary" style="max-width: 50%";>
  <div class="panel-heading">
    <h3 align="center"><b><i>Log in...</i></b></h3>
  </div>
  <div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">

    <%= form_for(resource, :html => {:class => "form-horizontal center"}, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <div class="field">
        <%= f.label :email, class: "col-md-1 control-label" %><br />
        <div class="col-md-12">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :password, class: "col-md-1 control-label" %><br />
          <div class="col-md-12">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
      </div>
    </div>

<!--     <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <%# if devise_mapping.rememberable? %>
            <%#= f.label :remember_me%>
            <%#= f.check_box :remember_me  %>
           <%# end %>   
        </div>
      </div>
    </div> --> 

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary " %>
    </div>
    <% end %>
  </div>
</div>
</div>

