<h1>Listing Employee</h1>
 
<table border = "1px">
  <tr>
    <th>Name </th>
    <th>Email</th>
     <th>Role</th>
    <th>Show_All</th>
    <th>Delete_All</th>
  </tr>
 
  <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.name %></td>
      <td><%= employee.email %></td>
      <% @role = Role.find_by_id(employee.role_id) %>
      <td><%= @role.name %></td>
      <td><%= link_to 'Show', employee_path(employee) %></td>
      <td><%= link_to 'Destroy', employee_path(employee),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>