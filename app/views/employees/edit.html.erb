

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 align = "center"><b><i>Edit the Profile...</i></b> </h3>
  </div>
  <div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">

  <%= form_for @employee, :url => employee_path, method: :put, :html => {:class => "form-horizontal center"} do |f| %>

    <div class="form-group">
      <%= f.label :Name, class: "col-md-6 control-label"%><br>
      <div class="col-md-4">
      <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :Phone, class: "col-md-6 control-label"%><br>
      <div class="col-md-4">
      <%= f.text_field :phone, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :Role, class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <b> <%= @employee.role.name %></b>
      </div>
    </div>
   
    <div class="form-group">
      <%= f.label :Designation,class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <b><%= @employee.designation.name %></b>
      </div>
    </div>

   <div class="form-group">
      <%= f.label :Email, class: "col-md-6 control-label"%><br>
      <div class="col-md-4">
      <%= f.text_field :email, class: "form-control" %>
      </div>
   </div>
    
    <div class="form-group">
    <div class="field">
      <%= f.label :password, class: "col-md-6 control-label"%>
      <% if @minimum_password_length %>
      <%= @employee.password.inspect %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <div class="col-md-4">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
    </div>
    </div>
    </div>
  
    <div class="form-group">
    <div class="field">
      <%= f.label :password_confirmation, class: "col-md-6 control-label" %><br />
      <div class="col-md-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    </div>
    </div>


   <h3 align = "center"> Add Bank Details</h3>

  <%= f.fields_for :bank_detail do |f| %>
    
    <div class="form-group">
      <%= f.label :Account_No, class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <%= f.text_field :account_no, :required => true, class: "form-control" %>
      </div>
    </div>

   
    <div class="form-group">
      <%= f.label :Bank_Name, class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <%= f.text_field :bank_name, :required => true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :Branch_name, class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <%= f.text_field :branch_name, :required => true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :IFSC_Code, class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <%= f.text_field :ifsc_code, :required => true, class: "form-control" %>
      </div>
    </div>
    
  <%end%>

  <h3 align = "center">Add Address Details</h3>

  <%= f.fields_for :address do |f| %>

    <div class="form-group">
      <%= f.label :House_No, class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <%= f.text_field :house_no, :required => true, class: "form-control" %>
      </div>
    </div>
 
    <div class="form-group">
      <%= f.label :Street, class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <%= f.text_field :street, :required => true, class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :Local_address, class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <%= f.text_field :local_address, :required => true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :Permanent_address, class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <%= f.text_field :permanent_address, :required => true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :City, class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <%= f.text_field :city, :required => true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :State, class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <%= f.text_field :state, :required => true, class: "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :Pincode, class: "col-md-6 control-label" %><br>
      <div class="col-md-4">
      <%= f.text_field :pincode, class: "form-control"  %>
      </div>
    </div>
  <%end%>
  
